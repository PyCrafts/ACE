FROM ace:latest
USER root
ARG DEBIAN_FRONTEND=noninteractive
ENV SAQ_HOME /opt/ace
ENV SAQ_USER ace
ENV SAQ_GROUP ace
ENV TERM xterm
ENV TZ UTC
ENV SAQ_ENC password
COPY ./docker/provision/http/install /opt/ace/docker/provision/http/install
COPY ./docker/provision/http/install_ubuntu_packages.sh  /opt/ace/docker/provision/http/install_ubuntu_packages.sh
RUN ./docker/provision/http/install_ubuntu_packages.sh
RUN ./docker/provision/http/install
COPY ./api.wsgi /opt/ace/api.wsgi
COPY ./ace.wsgi /opt/ace/ace.wsgi
